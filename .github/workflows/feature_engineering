name: Feature Engineering Pipeline

on:
  schedule:
    # Runs at 10:00 AM UTC every Wednesday
    - cron: '0 10 * * 1'
  workflow_dispatch:

jobs:
  run_pipeline:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python 3.11
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pandas nfl_data_py pyarrow google-cloud-storage firebase-admin

      - name: Set up Firebase credentials
        env:
          FIREBASE_KEY: ${{ secrets.FIREBASE_SERVICE_KEY }}
        run: |
          echo $FIREBASE_KEY | base64 --decode > firebase_key.json

      
      - name: Run data ingestion script
        run: |
          python scripts/data_ingestion.py

      - name: Run feature engineering script
        run: |
          python scripts/game_level.py

      - name: Run feature engineering script
        run: |
          python scripts/player_features.py

